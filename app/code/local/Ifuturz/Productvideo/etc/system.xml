<?xml version="1.0" encoding="UTF-8"?>
<config>
    <tabs>
        <ifuturz translate="label" module="productvideo">
            <label>Ifuturz Extensions</label>
            <sort_order>100</sort_order>
        </ifuturz>
    </tabs>
    <sections>
        <productvideo translate="label" module="productvideo">
            <label>Product Video Configuration</label>
            <tab>ifuturz</tab>
            <sort_order>1000</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <productvideo_group translate="label" module="productvideo">
                    <label>Product Video Configuration</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1000</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <productvideo_maxlimit translate="label">
                            <label>Max limit to upload the video: </label>
                            <comment>Set the limit to upload the number of videos per product.</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </productvideo_maxlimit> 
						<productvideo_maxsize translate="label">
                            <label>Max limit for the video size: </label>
                            <comment>Set the video size limit in MB for the product video.</comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </productvideo_maxsize>                       
                    </fields>
                </productvideo_group>
            </groups>
        </productvideo>
    </sections>
</config>